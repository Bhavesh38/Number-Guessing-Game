<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFDE4F"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inupt_text_view"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="#F3ECB5"
        android:hint="Enter a number between 1 and 100..."
        android:inputType="number"
        android:textColorHint="@color/black"
        android:padding="16dp"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/info_text_view"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#F3ECB5"
        android:padding="16dp"
        android:text="Enter a number between 1 and 100."
        android:textAlignment="center"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/submit_buttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#F3ECB5"
        android:text="Guess"
        android:onClick="submit"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#F3ECB5"
        android:text="Hint: You have maximum 5 attemts to guess the number, You will loose the game otherwise."
        android:textColor="#F84141"

        android:layout_gravity="bottom"
        android:padding="12dp"/>

</LinearLayout>